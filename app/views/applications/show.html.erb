<section id="application-<%= @application.id %>">
<h1>Application</h1>
<p>Name: <%= @application.name %></p>
<p>Street: <%= @application.street %></p>
<p>City: <%= @application.city %></p>
<p>State: <%= @application.state %></p>
<p>Zip: <%= @application.zip %></p>
<p>Why would you be a good pet owner: <%= @application.description %></p>
<p>Status: <%= @application.status %></p>
<p>Pets: <% @application.pets.each do |pet| %>
  <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
<% end %></p>
</section>


<section id="add_pet-<%= @application.id %>">
  <% if @application.status == "In Progress" %>
  <h3>Add a Pet to this Application</h3>

  <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
  <%= f.label :search, "Enter Pet Name:"%>
  <%= f.search_field :search %>
  <%= f.submit "Search" %>
  <% end %>
  <% end %>
<p>Matches:</p>
  <% if @pet_matches != nil%>
 <% @pet_matches.each do |match| %>
  <p><%= match.name %></p>
  <%= button_to "Adopt this Pet", action: "add_pet", params: {pet_id: match.id}%>
  <% end %>
  <% end %>
</section>
